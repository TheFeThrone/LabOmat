<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lobMode"
    tools:ignore="ContentDescription"
    android:background="@drawable/radial_gradient">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/lobButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp"
        app:strokeColor="@color/rubblau"
        app:strokeWidth="2dp"
        android:theme="@style/Theme.LabOmat"
        app:icon="@drawable/labomat"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/rubblau"
        android:text="@string/lob_button"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/statusBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.08"
        android:elevation="1dp"
        app:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/labomat" />

    <ImageView
        android:id="@+id/HcdLogo"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:alpha="0.6"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/hcd_logo" />

    <TextView
        android:id="@+id/captions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:elegantTextHeight="true"
        android:elevation="2dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lobButton"
        app:tint="@color/rubblau" />



</androidx.constraintlayout.widget.ConstraintLayout>